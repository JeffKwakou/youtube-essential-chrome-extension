{
  "manifest_version": 3,
  "name": "Youtube essential Extension",
  "description": "Permet de nettoyer son interface Youtube en gardant uniquement les sections qui nous int√©ressent !",
  "version": "1.0",
  "action": {
    "default_title": "Youtube Essential Interface",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
        "matches": ["*://youtube.com/*", "*://*.youtube.com/*"],
        "run_at": "document_end",
        "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}